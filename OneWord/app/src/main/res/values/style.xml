<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="word_title">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="word_date">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_primary_color</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>


    <style name="superBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>


</resources>